#include<bits/stdc++.h>
#define pf printf
#define sf scanf
using namespace std; 
int main()
{
	
int n,a[7]={0},f=0,i;
	sf("%d",&n);
	char s[n];
	sf("%s",s);
	 for(i=0;i<n;i++){
            if(s[i]=='h') a[0]++;
            if(s[i]=='a') a[1]++;
            if(s[i]=='c') a[2]++;
            if(s[i]=='k') a[3]++;
            if(s[i]=='e') a[4]++;
            if(s[i]=='r') a[5]++;
            if(s[i]=='t') a[6]++;
        }
 
 
       
        
        a[0]/=2,a[1]/=2,a[4]/=2,a[5]/=2;
 
         
		sort(a,a+7);
       
		pf("%d",a[0]);
        
 
 
}
