#include<stdio.h>
int main(){
    int t,n,i,j;
    scanf("%d",&t);
    while(t--){
        scanf("%d",&n);
        int a[n];
        long long odd=0,even=0;
        for(i=0;i<n;i++){
        scanf("%d",&a[i]);
        if(a[i]%2)
        odd++;
        else
        even++;
        }
        printf("%ld\n",odd*even);
    }
    return 0;
}
